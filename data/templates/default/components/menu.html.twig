{% if depth == 1 %}
<h4 class="phpdocumentor-sidebar__root-namespace"><a href="{{ entry.url }}">{{ entry.title | shortFQSEN }}</a></h4>
{% endif %}
{% if entry.children.count > 0 %}
    <ul class="phpdocumentor-list">
        {% for child in entry.children %}
            <li>
                <a href="{{ child.url }}">{{ child.title | shortFQSEN }}</a>
                {{ toc(child, 'components/menu.html.twig', maxDepth, depth) }}
            </li>
        {% endfor %}
    </ul>
{% endif %}
