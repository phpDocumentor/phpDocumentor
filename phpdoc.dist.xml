<?xml version="1.0" encoding="UTF-8" ?>
<phpdocumentor>
    <parser>
        <default-package-name>phpDocumentor</default-package-name>
        <target>build/api-cache</target>
    </parser>
    <transformer>
        <target>build/api</target>
    </transformer>
    <files>
        <directory>.</directory>
        <ignore>tests/*</ignore>
        <ignore>build/*</ignore>
        <ignore>var/*</ignore>
        <ignore>vendor/*</ignore>
    </files>
    <plugins>
        <plugin path="Core" />
    </plugins>
    <transformations>
        <template name="clean" />
    </transformations>
</phpdocumentor>
